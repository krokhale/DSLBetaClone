<h1>Create Lesson</h1>
<%= form_for(@lesson) do |f| %>
  <%= render 'lessons/message' %>
   <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description,:placeholder=>"Write the description" %>
  </div>
  
  <div class="field">
    <%= f.label :instructions %><br/>
    <%= f.text_area :instructions, :placeholder=>"write the instructions" %>
  </div>
  
   <div class="field">
    <%= f.label :solution %><br/>
    <%= f.text_area :solution, :placeholder=>"Write the solution here" %>
  </div>
  
  <div class="field">
    <%= f.label :tips %><br/>
    <%= f.text_area :tips, :placeholder=>"Write the tips here" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
