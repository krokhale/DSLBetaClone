<div class='row'>
  <div class='col-md-5 col-md-offset-3'>
<fieldset style='border:1px solid #eee;padding:5%'>
  <h3 style='margin-top:0;'>
    <i class='icon-signin'></i>
    Data Skills Lab - Sign In
    <hr />
  </h3>

  <form role="form" action='/sessions' method='POST'>
    <div class="form-group">
      <label >Email address</label>
      <input type="email" name='session[email]' class="form-control" id="session_email" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" name='session[password]' class="form-control" id="session_password" placeholder="Password">
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox" id='remember_me' name='remember_me'> Remember me
      </label>
    </div>
    <button type="submit" class="btn btn-default">
      <i class='icon-signin'></i>
      Sign in
    </button>
  </form>
  <br />
  <p><%= link_to "Forgot Password?", new_password_reset_path %></p>
  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</fieldset>
</div>
</div>



