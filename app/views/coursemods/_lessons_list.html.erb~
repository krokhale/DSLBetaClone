<% unless @lessons.empty? %>
  <ul>
   <% @lessons.each do |lesson| %>
      <li><strong><%= link_to lesson.name,lcontent_path(lesson.id) %></strong> 
      <% if has_permissions_on?('course','e') %>
        |<%= link_to 'edit',edit_lcontent_path(lesson.id) %> 
      <% end %>
      <% if has_permissions_on?('course','d') %>
        |<%= link_to "delete", lcontent_path, :method => :delete, :confirm => "you sure?", :title => lesson.name %></li>
      <% end %>
   <% end %> 
   <%= will_paginate @lessons %>
  </ul>
<% end %> 
