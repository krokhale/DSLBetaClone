module LessonsHelper

  def prev_lesson_id
    order_id = get_order-1
    if session[:les_id][order_id]
      session[:les_id][order_id]
    else 
      session[:lid]
    end
  end
  
  def next_lesson_id
    order_id = get_order+1
    if session[:les_id][order_id]
      session[:les_id][order_id]
    else 
      session[:lid]
    end
  end
  
  def get_order
    Modularization.where("module_id = ? AND lesson_id = ?",session[:mid],session[:lid]).first.lesson_order
  end
end

